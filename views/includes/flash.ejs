<% if(success && success.length) { %>
  <div class="container mt-3">
    <div class="alert alert-success alert-dismissible fade show shadow-sm d-flex align-items-center"
         role="alert"
         style="border-left: 6px solid #28a745; border-radius: 12px;">

      <div class="mr-3" style="font-size: 22px;">✅</div>

      <div class="font-weight-bold mb-0">
        <%= success %>
      </div>

      <button type="button" class="close ml-auto" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% } %>

<% if(error && error.length) { %>
  <div class="container mt-3">
    <div class="alert alert-danger alert-dismissible fade show shadow-sm d-flex align-items-center"
         role="alert"
         style="border-left: 6px solid #dc3545; border-radius: 12px;">

      <div class="mr-3" style="font-size: 22px;">⚠️</div>

      <div class="font-weight-bold mb-0">
        <%= error %>
      </div>

      <button type="button" class="close ml-auto" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% } %>
